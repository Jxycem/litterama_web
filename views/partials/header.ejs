    <style>
        @media (max-width: 3850px){
        }
        /*Desktop*/
        @media (max-width: 1920px){

        }
        /*Laptops*/
        @media (max-width: 1600px){  
  
        }

        /*Ipads and tablet*/
        @media (max-width: 1200px){
            /*******HEADER *******/
            .hero-section{
                height: 555px;
            }
            div.textbox{
                top: 80px;
            }
            h1.hero-title{
                font-size: 3rem;
                line-height: 48px;
            }
            /*******ABOUT PAGE********/
            div.header-about{
                top: 8px;
            }
            .about-description{
                top: 172px;
            }
            .innerbox-description{
                width: 80%;
            }
            div.innerbox-about-title > h1{
                font-size: 3rem;
            }
  
        }

        /*Something in between*/
        @media (max-width: 800px){
            /*******HEADER *******/
            div.container-fluid{
                margin-left: 25px;
                margin-right: 25px;
            }
            a.logo{
                width: 200px;
            }
            div.textbox{
                top: 70px;
            }
            h1.hero-title{
                font-size: 2.8rem;
            }
            /*******CONTACT PAGE*********/
            div.row-contact{
                flex-direction: column;
            }
            /******FOOTER******/
            div.inner-footer{
                display: block;
            }
            div.inner-footer div.company_socials{
                justify-content: center;
            }
            div.inner-footer>a{
                display: inline-block;
            }
            a>img.logo-footer{
                width: 20rem;
            }
            /*******ABOUT PAGE********/
            div.about-bg{
                height: 600px;
            }
            div.header-about{
                top: 3px;
            }
            div.innerbox-about-title > h1{
                font-size: 2.3rem;
            }
            .about-description{
                top: 167px;
            }
            .innerbox-description{
                width: 90%;
                font-size: 1.1rem;
            }
            
        }
        /*Mobile(phone)*/
        @media (max-width: 480px){
            div.container-fluid{
                margin-left: 18px;
                margin-right: 18px;
            }
            a.logo{
                width: 170px;
            }
            .hero-section{
                height: 500px;
            }
            div.textbox{
                top: 25px;
            }
            h1.hero-title{
                font-size: 2.3rem;
                line-height: 38px;
            }
            div.textbox-inner>p{
                font-size: 1.04rem;
            }
            /*******ABOUT PAGE********/
            div.about-bg{
                height: 750px;
            }
            div.innerbox-about-title > h1{
                font-size: 2rem;
            }
            .about-description{
                top: 215px;
            }
            .innerbox-description{
                font-size: 1rem;
            }  
            
        }
        
        main{
            min-height: 100vh;
        }
    </style>
