<%- include("partials/header.ejs") %>
<title><%= t('contact.title') %> | Littérama</title>

<div class="content">

    <div class="row-contact" style="min-height: 100vh;">
        <div class="column-contact form">
            <h1 style="text-align: center; margin-top: 35px; font-weight: 700;"><%= t('contact.first-title') %></h1>
            <% if (locals.fName) { %>
              <div style="color: white; text-align: center; font-size: 1.6rem; font-style: italic;"><%= t("contact.form-sent") %></div>
             <% }  %>
<!----------Contact form-------->
            <form action="/contactez-nous/envoyer" method="post">
                <div class="mb-3">
                    <label for="fName" class="form-label"><%= t("contact.form-fName") %></label>
                    <input type="text" class="form-control btn-outline-light bg-transparent text-white" id="fName" name="fName" required>
                </div>
                <div class="mb-3">
                    <label for="lName" class="form-label"><%= t("contact.form-lName") %></label>
                    <input type="text" class="form-control btn-outline-light bg-transparent text-white" id="lName" name="lName" required>
                </div>
                  <div class="mb-3">
                    <label for="email" class="form-label"><%= t("contact.form-email") %></label>
                    <input type="email" class="form-control btn-outline-light bg-transparent text-white" id="email" name="email" required>
                  </div>
                  <div class="mb-3">
                    <label for="message" class="form-label"><%= t("contact.form-message") %></label>
                    <textarea class="form-control btn-outline-light bg-transparent text-white" name="message" id="message" required></textarea>
                  </div>
                  <div class="g-recaptcha" data-sitekey="6LfXqK0qAAAAAJTeBgVAMNk9vRSuu-20CotBEwIa" aria-required="true"></div>
                  <% if (locals.message) { %>
                   <div style="color: red;"><%= t("contact.form-error") %></div>
                  <% }  %>
                  <button type="submit" class="btn btn-dark" style="margin-top: 20px;"><%= t("contact.form-submit") %></button>
                  
                  

        </form>
        </div>
<!-----------------Second column-------------->
        <div class="column-contact" style="color: black; padding: 52px 52px 0 70px;">
          <!-------first Row email-->
          <div class="company_email">
            <h2 style="font-weight: 700;"><%= t('contact.second-title') %></h2>
             <a href="mailto:litteramamedia@gmail.com" style="color: black;">litteramamedia@gmail.com</a>
          </div>
          <!--second Row location-------->
          <div class="company_location">
            <h3 style="font-weight: 700;"><%= t("contact.info-location") %></h3>
            Littérama
            <br>
            Gatineau, QC, Canada
          </div>
          <!--------first Row socials-------->
          <div class="company_socials">
            <a href="https://www.instagram.com/litterama_media/" target="_blank" rel="noopener noreferrer">
              <img src="/images/instagram.svg" alt="instagram_logo">
            </a>
            <a href="https://youtube.com/@litterama?si=nLgXrMmUbM6rD7HC" target="_blank" rel="noopener noreferrer">
              <img src="/images/youtube.svg" alt="youtube_logo">
            </a>
            <a href="https://www.snapchat.com/add/litterama?share_id=nS0RDwcLM8U&locale=en-CA" target="_blank" rel="noopener noreferrer">
              <img src="/images/snapchat.svg" alt="snapchat_logo">
            </a>
          </div>
          </div>
        </div>
        
    </div>

        
    </div>
</div>




<%- include("partials/footer.ejs") %>